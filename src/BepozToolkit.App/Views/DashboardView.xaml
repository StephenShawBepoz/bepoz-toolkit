<UserControl x:Class="BepozToolkit.App.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:BepozToolkit.App.Converters"
             xmlns:vm="clr-namespace:BepozToolkit.App.ViewModels"
             d:DataContext="{d:DesignInstance vm:DashboardViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{DynamicResource BackgroundPrimary}">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:BoolToSuccessBrushConverter x:Key="BoolToSuccessBrush" />
        <converters:BoolToSuccessIconConverter x:Key="BoolToSuccessIcon" />
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Loading Indicator -->
        <ProgressBar Grid.Row="0" IsIndeterminate="True" Height="2" Margin="0,0,0,8"
                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}" />

        <!-- Stat Cards Row -->
        <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,0,24">
            <!-- Total Runs Card -->
            <Border Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource CardBorder}"
                    BorderThickness="1" CornerRadius="8" Margin="0,0,12,0" Padding="20">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="6" Opacity="0.1" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Total Runs" FontSize="13"
                               Foreground="{DynamicResource TextSecondary}" />
                    <TextBlock Text="{Binding TotalRuns}" FontSize="36" FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimary}" Margin="0,4,0,0" />
                    <TextBlock Text="all-time executions" FontSize="11"
                               Foreground="{DynamicResource TextSecondary}" Margin="0,4,0,0" />
                </StackPanel>
            </Border>

            <!-- Tools Available Card -->
            <Border Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource CardBorder}"
                    BorderThickness="1" CornerRadius="8" Margin="6,0,6,0" Padding="20">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="6" Opacity="0.1" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Tools Available" FontSize="13"
                               Foreground="{DynamicResource TextSecondary}" />
                    <TextBlock Text="{Binding ToolCount}" FontSize="36" FontWeight="Bold"
                               Foreground="{DynamicResource AccentPrimary}" Margin="0,4,0,0" />
                    <TextBlock Text="in manifest" FontSize="11"
                               Foreground="{DynamicResource TextSecondary}" Margin="0,4,0,0" />
                </StackPanel>
            </Border>

            <!-- Success Rate Card -->
            <Border Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource CardBorder}"
                    BorderThickness="1" CornerRadius="8" Margin="12,0,0,0" Padding="20">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="6" Opacity="0.1" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Success Rate" FontSize="13"
                               Foreground="{DynamicResource TextSecondary}" />
                    <TextBlock FontSize="36" FontWeight="Bold"
                               Foreground="{DynamicResource SuccessColor}" Margin="0,4,0,0">
                        <TextBlock.Text>
                            <Binding Path="SuccessRate" StringFormat="{}{0:F1}%" />
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock Text="overall" FontSize="11"
                               Foreground="{DynamicResource TextSecondary}" Margin="0,4,0,0" />
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Quick Run Section -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource CardBorder}"
                BorderThickness="1" CornerRadius="8" Margin="0,0,0,24" Padding="20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="6" Opacity="0.1" />
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Quick Run" FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,12" />

                <!-- Pinned Tool Buttons -->
                <ItemsControl ItemsSource="{Binding PinnedTools}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Margin="0,0,8,8" Padding="12,8"
                                    Command="{Binding DataContext.RunToolCommand,
                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Background="{DynamicResource AccentPrimary}"
                                    Foreground="{DynamicResource TextOnAccent}"
                                    BorderThickness="0" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#x25B6;" Margin="0,0,6,0"
                                                           VerticalAlignment="Center" FontSize="10" />
                                                <TextBlock Text="{Binding Name}"
                                                           VerticalAlignment="Center" FontSize="13" />
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty state -->
                <TextBlock Text="No pinned tools. Pin tools from the Tools tab to see them here."
                           FontSize="12" Foreground="{DynamicResource TextDisabled}"
                           Margin="0,4,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PinnedTools.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Recent Activity Section -->
        <Border Grid.Row="3" Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource CardBorder}"
                BorderThickness="1" CornerRadius="8" Padding="20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="6" Opacity="0.1" />
            </Border.Effect>
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Recent Activity"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,12" />

                <!-- Empty state -->
                <TextBlock Text="No recent activity. Run a tool to see results here."
                           FontSize="12" Foreground="{DynamicResource TextDisabled}"
                           VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RecentActivity.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Activity List -->
                <ListView ItemsSource="{Binding RecentActivity}"
                          BorderThickness="0" Background="Transparent"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="0,6" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Success/Fail Icon -->
                                <TextBlock Grid.Column="0" FontSize="16"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Text="{Binding Success, Converter={StaticResource BoolToSuccessIcon}}"
                                           Foreground="{Binding Success, Converter={StaticResource BoolToSuccessBrush}}" />

                                <!-- Tool Name -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8,0,0,0">
                                    <TextBlock Text="{Binding ToolName}" FontSize="13" FontWeight="Medium"
                                               Foreground="{DynamicResource TextPrimary}" />
                                    <TextBlock Text="{Binding Duration}" FontSize="11"
                                               Foreground="{DynamicResource TextSecondary}" />
                                </StackPanel>

                                <!-- Relative Time -->
                                <TextBlock Grid.Column="2" Text="{Binding RelativeTime}"
                                           FontSize="12" Foreground="{DynamicResource TextSecondary}"
                                           VerticalAlignment="Center" Margin="12,0" />

                                <!-- Status Dot -->
                                <Ellipse Grid.Column="3" Width="8" Height="8"
                                         VerticalAlignment="Center"
                                         Fill="{Binding Success, Converter={StaticResource BoolToSuccessBrush}}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
