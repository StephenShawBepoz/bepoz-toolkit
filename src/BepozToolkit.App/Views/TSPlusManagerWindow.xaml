<Window x:Class="BepozToolkit.App.Views.TSPlusManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:BepozToolkit.App.Converters"
        xmlns:vm="clr-namespace:BepozToolkit.App.ViewModels"
        d:DataContext="{d:DesignInstance vm:TSPlusManagerViewModel}"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TSPlus Manager"
        Width="1100" Height="720" MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundPrimary}">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource BackgroundTertiary}" Padding="16,12">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="TSPlus Manager" FontSize="20" FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimary}" />
                    <TextBlock Text="{Binding StatusText}" FontSize="12"
                               Foreground="{DynamicResource TextSecondary}" Margin="0,2,0,0" />
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Content="Copy Log" Padding="12,6" Margin="0,0,8,0"
                            Command="{Binding CopyLogCommand}"
                            Background="{DynamicResource BackgroundSecondary}"
                            Foreground="{DynamicResource TextPrimary}"
                            BorderBrush="{DynamicResource CardBorder}"
                            BorderThickness="1" Cursor="Hand" FontSize="12">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="Open Log" Padding="12,6"
                            Command="{Binding OpenLogCommand}"
                            Background="Transparent"
                            Foreground="{DynamicResource AccentPrimary}"
                            BorderThickness="0" Cursor="Hand" FontSize="12" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content: TabControl + Output -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left: Tab Control -->
            <TabControl Grid.Column="0" SelectedIndex="{Binding SelectedTabIndex}"
                        Background="Transparent" BorderThickness="0"
                        Padding="0">

                <!-- Tab 1: Uninstaller -->
                <TabItem Header="Uninstall">
                    <Border Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource CardBorder}" BorderThickness="1"
                            CornerRadius="0,0,8,8" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Uninstall TSPlus" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,8" />
                            <TextBlock Text="Completely remove TSPlus Remote Access from this system."
                                       FontSize="12" Foreground="{DynamicResource TextSecondary}"
                                       TextWrapping="Wrap" Margin="0,0,0,16" />

                            <CheckBox Content="Backup configuration before uninstall" Margin="0,0,0,12"
                                      IsChecked="{Binding BackupBeforeUninstall}"
                                      Foreground="{DynamicResource TextPrimary}" FontSize="12" />

                            <ProgressBar Minimum="0" Maximum="100" Value="{Binding UninstallProgress}"
                                         Height="4" Margin="0,0,0,12"
                                         Foreground="{DynamicResource AccentPrimary}"
                                         Background="{DynamicResource BackgroundTertiary}"
                                         Visibility="{Binding IsUninstalling, Converter={StaticResource BoolToVisibility}}" />

                            <Button Content="Uninstall TSPlus" Padding="16,8" HorizontalAlignment="Left"
                                    Command="{Binding UninstallCommand}"
                                    Background="{DynamicResource ErrorColor}"
                                    Foreground="{DynamicResource TextOnAccent}"
                                    BorderThickness="0" Cursor="Hand" FontSize="13">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>
                </TabItem>

                <!-- Tab 2: License -->
                <TabItem Header="License">
                    <Border Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource CardBorder}" BorderThickness="1"
                            CornerRadius="0,0,8,8" Padding="20">
                        <StackPanel>
                            <TextBlock Text="License Management" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,8" />

                            <!-- License Status -->
                            <Border Background="{DynamicResource BackgroundTertiary}"
                                    CornerRadius="6" Padding="12" Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimary}" FontSize="12" Margin="0,0,12,4" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding LicenseInfo.Status}"
                                               Foreground="{DynamicResource TextSecondary}" FontSize="12" Margin="0,0,0,4" />
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Edition:" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimary}" FontSize="12" Margin="0,0,12,4" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LicenseInfo.Edition}"
                                               Foreground="{DynamicResource TextSecondary}" FontSize="12" Margin="0,0,0,4" />
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Max Users:" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimary}" FontSize="12" Margin="0,0,12,0" />
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding LicenseInfo.MaxUsers}"
                                               Foreground="{DynamicResource TextSecondary}" FontSize="12" />
                                </Grid>
                            </Border>

                            <!-- License Key Input -->
                            <TextBlock Text="License Key" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,4" />
                            <TextBox Text="{Binding LicenseKey, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="12" Padding="8,6" Margin="0,0,0,12"
                                     Background="{DynamicResource BackgroundTertiary}"
                                     Foreground="{DynamicResource TextPrimary}"
                                     BorderBrush="{DynamicResource CardBorder}" />

                            <StackPanel Orientation="Horizontal">
                                <Button Content="Apply License" Padding="16,8" Margin="0,0,8,0"
                                        Command="{Binding ApplyLicenseCommand}"
                                        Background="{DynamicResource AccentPrimary}"
                                        Foreground="{DynamicResource TextOnAccent}"
                                        BorderThickness="0" Cursor="Hand" FontSize="12">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="Refresh" Padding="16,8" Margin="0,0,8,0"
                                        Command="{Binding RefreshLicenseCommand}"
                                        Background="{DynamicResource BackgroundSecondary}"
                                        Foreground="{DynamicResource TextPrimary}"
                                        BorderBrush="{DynamicResource CardBorder}"
                                        BorderThickness="1" Cursor="Hand" FontSize="12">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="Open Admin Tool" Padding="16,8"
                                        Command="{Binding OpenAdminToolCommand}"
                                        Background="Transparent"
                                        Foreground="{DynamicResource AccentPrimary}"
                                        BorderThickness="0" Cursor="Hand" FontSize="12" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </TabItem>

                <!-- Tab 3: Services -->
                <TabItem Header="Services">
                    <Border Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource CardBorder}" BorderThickness="1"
                            CornerRadius="0,0,8,8" Padding="20">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="TSPlus Services" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,12" />

                            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,12,0,0">
                                <Button Content="Start" Padding="12,6" Margin="0,0,8,0"
                                        Command="{Binding StartServiceCommand}"
                                        Background="{DynamicResource SuccessColor}"
                                        Foreground="{DynamicResource TextOnAccent}"
                                        BorderThickness="0" Cursor="Hand" FontSize="12">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="Stop" Padding="12,6" Margin="0,0,8,0"
                                        Command="{Binding StopServiceCommand}"
                                        Background="{DynamicResource ErrorColor}"
                                        Foreground="{DynamicResource TextOnAccent}"
                                        BorderThickness="0" Cursor="Hand" FontSize="12">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="Restart" Padding="12,6" Margin="0,0,8,0"
                                        Command="{Binding RestartServiceCommand}"
                                        Background="{DynamicResource WarningColor}"
                                        Foreground="{DynamicResource TextOnAccent}"
                                        BorderThickness="0" Cursor="Hand" FontSize="12">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="Refresh" Padding="12,6"
                                        Command="{Binding RefreshServicesCommand}"
                                        Background="{DynamicResource BackgroundSecondary}"
                                        Foreground="{DynamicResource TextPrimary}"
                                        BorderBrush="{DynamicResource CardBorder}"
                                        BorderThickness="1" Cursor="Hand" FontSize="12">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>

                            <ListView ItemsSource="{Binding Services}"
                                      SelectedItem="{Binding SelectedService}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="{DynamicResource TextPrimary}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Service" Width="180"
                                                        DisplayMemberBinding="{Binding DisplayName}" />
                                        <GridViewColumn Header="Status" Width="100"
                                                        DisplayMemberBinding="{Binding Status}" />
                                        <GridViewColumn Header="Start Type" Width="100"
                                                        DisplayMemberBinding="{Binding StartType}" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </DockPanel>
                    </Border>
                </TabItem>

                <!-- Tab 4: Backup & Restore -->
                <TabItem Header="Backup">
                    <Border Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource CardBorder}" BorderThickness="1"
                            CornerRadius="0,0,8,8" Padding="20">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Backup &amp; Restore" FontSize="16"
                                       FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}"
                                       Margin="0,0,0,12" />

                            <!-- Create Backup -->
                            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
                                <TextBlock Text="Description" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,4" />
                                <DockPanel Margin="0,0,0,8">
                                    <Button DockPanel.Dock="Right" Content="Create Backup" Padding="12,6"
                                            Margin="8,0,0,0"
                                            Command="{Binding CreateBackupCommand}"
                                            Background="{DynamicResource AccentPrimary}"
                                            Foreground="{DynamicResource TextOnAccent}"
                                            BorderThickness="0" Cursor="Hand" FontSize="12">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <TextBox Text="{Binding BackupDescription, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="12" Padding="8,6"
                                             Background="{DynamicResource BackgroundTertiary}"
                                             Foreground="{DynamicResource TextPrimary}"
                                             BorderBrush="{DynamicResource CardBorder}" />
                                </DockPanel>
                            </StackPanel>

                            <!-- Restore buttons -->
                            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,12,0,0">
                                <Button Content="Restore Selected" Padding="12,6" Margin="0,0,8,0"
                                        Command="{Binding RestoreBackupCommand}"
                                        Background="{DynamicResource WarningColor}"
                                        Foreground="{DynamicResource TextOnAccent}"
                                        BorderThickness="0" Cursor="Hand" FontSize="12">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="Refresh" Padding="12,6"
                                        Command="{Binding RefreshBackupsCommand}"
                                        Background="{DynamicResource BackgroundSecondary}"
                                        Foreground="{DynamicResource TextPrimary}"
                                        BorderBrush="{DynamicResource CardBorder}"
                                        BorderThickness="1" Cursor="Hand" FontSize="12">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>

                            <!-- Backup List -->
                            <ListView ItemsSource="{Binding Backups}"
                                      SelectedItem="{Binding SelectedBackup}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="{DynamicResource TextPrimary}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Description" Width="200"
                                                        DisplayMemberBinding="{Binding Description}" />
                                        <GridViewColumn Header="Created" Width="150"
                                                        DisplayMemberBinding="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" />
                                        <GridViewColumn Header="Size" Width="80"
                                                        DisplayMemberBinding="{Binding SizeBytes, StringFormat='{}{0:N0} B'}" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </DockPanel>
                    </Border>
                </TabItem>

                <!-- Tab 5: Updates -->
                <TabItem Header="Updates">
                    <Border Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource CardBorder}" BorderThickness="1"
                            CornerRadius="0,0,8,8" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Updates" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,8" />

                            <!-- Current Version -->
                            <Border Background="{DynamicResource BackgroundTertiary}"
                                    CornerRadius="6" Padding="12" Margin="0,0,0,16">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Current Version: " FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimary}" FontSize="13" />
                                    <TextBlock Text="{Binding CurrentVersion}"
                                               Foreground="{DynamicResource AccentPrimary}" FontSize="13" />
                                </StackPanel>
                            </Border>

                            <!-- Update URL -->
                            <TextBlock Text="Update URL" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,4" />
                            <TextBox Text="{Binding UpdateUrl, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="12" Padding="8,6" Margin="0,0,0,12"
                                     Background="{DynamicResource BackgroundTertiary}"
                                     Foreground="{DynamicResource TextPrimary}"
                                     BorderBrush="{DynamicResource CardBorder}" />

                            <ProgressBar Minimum="0" Maximum="100" Value="{Binding UpdateProgress}"
                                         Height="4" Margin="0,0,0,12"
                                         Foreground="{DynamicResource AccentPrimary}"
                                         Background="{DynamicResource BackgroundTertiary}"
                                         Visibility="{Binding IsDownloadingUpdate, Converter={StaticResource BoolToVisibility}}" />

                            <Button Content="Download Update" Padding="16,8" HorizontalAlignment="Left"
                                    Command="{Binding DownloadUpdateCommand}"
                                    Background="{DynamicResource AccentPrimary}"
                                    Foreground="{DynamicResource TextOnAccent}"
                                    BorderThickness="0" Cursor="Hand" FontSize="13">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>
                </TabItem>

                <!-- Tab 6: Ports -->
                <TabItem Header="Ports">
                    <Border Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource CardBorder}" BorderThickness="1"
                            CornerRadius="0,0,8,8" Padding="20">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Port Status &amp; Firewall" FontSize="16"
                                       FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}"
                                       Margin="0,0,0,12" />

                            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,12,0,0">
                                <Button Content="Create Firewall Rules" Padding="12,6" Margin="0,0,8,0"
                                        Command="{Binding CreateFirewallRulesCommand}"
                                        Background="{DynamicResource AccentPrimary}"
                                        Foreground="{DynamicResource TextOnAccent}"
                                        BorderThickness="0" Cursor="Hand" FontSize="12">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="Refresh" Padding="12,6"
                                        Command="{Binding RefreshPortsCommand}"
                                        Background="{DynamicResource BackgroundSecondary}"
                                        Foreground="{DynamicResource TextPrimary}"
                                        BorderBrush="{DynamicResource CardBorder}"
                                        BorderThickness="1" Cursor="Hand" FontSize="12">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>

                            <ListView ItemsSource="{Binding Ports}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="{DynamicResource TextPrimary}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Port" Width="80"
                                                        DisplayMemberBinding="{Binding Port}" />
                                        <GridViewColumn Header="Protocol" Width="80"
                                                        DisplayMemberBinding="{Binding Protocol}" />
                                        <GridViewColumn Header="Description" Width="120"
                                                        DisplayMemberBinding="{Binding Description}" />
                                        <GridViewColumn Header="Listening" Width="80">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Ellipse Width="10" Height="10" HorizontalAlignment="Center">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Fill" Value="{DynamicResource ErrorColor}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsListening}" Value="True">
                                                                        <Setter Property="Fill" Value="{DynamicResource SuccessColor}" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Firewall" Width="80">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Ellipse Width="10" Height="10" HorizontalAlignment="Center">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Fill" Value="{DynamicResource ErrorColor}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding HasFirewallRule}" Value="True">
                                                                        <Setter Property="Fill" Value="{DynamicResource SuccessColor}" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </DockPanel>
                    </Border>
                </TabItem>

                <!-- Tab 7: Connections -->
                <TabItem Header="Connections">
                    <Border Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource CardBorder}" BorderThickness="1"
                            CornerRadius="0,0,8,8" Padding="20">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Active Connections" FontSize="16"
                                       FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}"
                                       Margin="0,0,0,12" />

                            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,12,0,0">
                                <Button Content="Refresh" Padding="12,6"
                                        Command="{Binding RefreshConnectionsCommand}"
                                        Background="{DynamicResource AccentPrimary}"
                                        Foreground="{DynamicResource TextOnAccent}"
                                        BorderThickness="0" Cursor="Hand" FontSize="12">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>

                            <ListView ItemsSource="{Binding Connections}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="{DynamicResource TextPrimary}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Username" Width="150"
                                                        DisplayMemberBinding="{Binding Username}" />
                                        <GridViewColumn Header="Client Address" Width="140"
                                                        DisplayMemberBinding="{Binding ClientAddress}" />
                                        <GridViewColumn Header="Session ID" Width="80"
                                                        DisplayMemberBinding="{Binding SessionId}" />
                                        <GridViewColumn Header="State" Width="100"
                                                        DisplayMemberBinding="{Binding State}" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </DockPanel>
                    </Border>
                </TabItem>
            </TabControl>

            <!-- Right: Activity Log -->
            <Border Grid.Column="2" Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource CardBorder}" BorderThickness="1"
                    CornerRadius="8" Padding="0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.06" />
                </Border.Effect>
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="{DynamicResource BackgroundTertiary}"
                            CornerRadius="8,8,0,0" Padding="12,8">
                        <TextBlock Text="Activity Log" FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource TextPrimary}" />
                    </Border>
                    <ListBox ItemsSource="{Binding OutputLines}"
                             BorderThickness="0" Background="Transparent"
                             FontFamily="Consolas" FontSize="11"
                             Foreground="{DynamicResource TextPrimary}"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.CanContentScroll="True"
                             VirtualizingStackPanel.IsVirtualizing="True">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="8,1" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Focusable" Value="False" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="NoWrap" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
