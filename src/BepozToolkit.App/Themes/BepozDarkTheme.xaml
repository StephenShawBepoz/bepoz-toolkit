<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ======================================================================
         Bepoz Toolkit - Dark Theme
         Professional dark palette with comfortable contrast ratios.
         ====================================================================== -->

    <!-- Background surfaces -->
    <SolidColorBrush x:Key="BackgroundPrimary"   Color="#121212" />
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#1E1E1E" />
    <SolidColorBrush x:Key="BackgroundTertiary"  Color="#2C2C2C" />

    <!-- Text colors -->
    <SolidColorBrush x:Key="TextPrimary"   Color="#E0E0E0" />
    <SolidColorBrush x:Key="TextSecondary" Color="#9E9E9E" />
    <SolidColorBrush x:Key="TextDisabled"  Color="#616161" />
    <SolidColorBrush x:Key="TextOnAccent"  Color="#FFFFFF" />

    <!-- Accent / brand colors -->
    <SolidColorBrush x:Key="AccentPrimary"   Color="#42A5F5" />
    <SolidColorBrush x:Key="AccentSecondary" Color="#FFD54F" />
    <SolidColorBrush x:Key="AccentHover"     Color="#64B5F6" />
    <SolidColorBrush x:Key="AccentPressed"   Color="#1E88E5" />

    <!-- Cards -->
    <SolidColorBrush x:Key="CardBackground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="CardBorder"     Color="#333333" />

    <!-- Title bar -->
    <SolidColorBrush x:Key="TitleBarBackground"   Color="#1A1A2E" />
    <SolidColorBrush x:Key="TitleBarForeground"    Color="#E0E0E0" />
    <SolidColorBrush x:Key="TitleBarButtonHover"   Color="#2A2A3E" />
    <SolidColorBrush x:Key="TitleBarCloseHover"    Color="#E53935" />

    <!-- Tab / navigation -->
    <SolidColorBrush x:Key="TabBackground"        Color="#1E1E1E" />
    <SolidColorBrush x:Key="TabActiveBackground"   Color="#1A2744" />
    <SolidColorBrush x:Key="TabActiveForeground"   Color="#42A5F5" />
    <SolidColorBrush x:Key="TabInactiveForeground" Color="#9E9E9E" />
    <SolidColorBrush x:Key="TabActiveIndicator"    Color="#42A5F5" />

    <!-- Status / semantic colors -->
    <SolidColorBrush x:Key="SuccessColor"  Color="#66BB6A" />
    <SolidColorBrush x:Key="ErrorColor"    Color="#EF5350" />
    <SolidColorBrush x:Key="WarningColor"  Color="#FFA726" />
    <SolidColorBrush x:Key="InfoColor"     Color="#42A5F5" />

    <!-- Status pill backgrounds (darker variants) -->
    <SolidColorBrush x:Key="SuccessBackground"  Color="#1B3A1B" />
    <SolidColorBrush x:Key="ErrorBackground"    Color="#3A1B1B" />
    <SolidColorBrush x:Key="WarningBackground"  Color="#3A2E1B" />
    <SolidColorBrush x:Key="InfoBackground"     Color="#1B2A3A" />

    <!-- Dividers / separators -->
    <SolidColorBrush x:Key="DividerColor"  Color="#333333" />

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollbarThumb"      Color="#555555" />
    <SolidColorBrush x:Key="ScrollbarThumbHover"  Color="#777777" />
    <SolidColorBrush x:Key="ScrollbarTrack"       Color="#1E1E1E" />

    <!-- Offline banner -->
    <SolidColorBrush x:Key="OfflineBannerBackground" Color="#3A2E1B" />
    <SolidColorBrush x:Key="OfflineBannerForeground" Color="#FFA726" />

    <!-- Shadow / elevation -->
    <Color x:Key="ShadowColor">#60000000</Color>

</ResourceDictionary>
