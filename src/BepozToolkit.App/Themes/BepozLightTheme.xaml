<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ======================================================================
         Bepoz Toolkit - Light Theme
         Clean, professional light palette inspired by Material Design surfaces.
         ====================================================================== -->

    <!-- Background surfaces -->
    <SolidColorBrush x:Key="BackgroundPrimary"   Color="#FAFAFA" />
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#FFFFFF" />
    <SolidColorBrush x:Key="BackgroundTertiary"  Color="#F5F5F5" />

    <!-- Text colors -->
    <SolidColorBrush x:Key="TextPrimary"   Color="#212121" />
    <SolidColorBrush x:Key="TextSecondary" Color="#757575" />
    <SolidColorBrush x:Key="TextDisabled"  Color="#BDBDBD" />
    <SolidColorBrush x:Key="TextOnAccent"  Color="#FFFFFF" />

    <!-- Accent / brand colors -->
    <SolidColorBrush x:Key="AccentPrimary"   Color="#1565C0" />
    <SolidColorBrush x:Key="AccentSecondary" Color="#FFC107" />
    <SolidColorBrush x:Key="AccentHover"     Color="#1976D2" />
    <SolidColorBrush x:Key="AccentPressed"   Color="#0D47A1" />

    <!-- Cards -->
    <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="CardBorder"     Color="#E0E0E0" />

    <!-- Title bar -->
    <SolidColorBrush x:Key="TitleBarBackground"   Color="#1565C0" />
    <SolidColorBrush x:Key="TitleBarForeground"    Color="#FFFFFF" />
    <SolidColorBrush x:Key="TitleBarButtonHover"   Color="#1976D2" />
    <SolidColorBrush x:Key="TitleBarCloseHover"    Color="#E53935" />

    <!-- Tab / navigation -->
    <SolidColorBrush x:Key="TabBackground"       Color="#FFFFFF" />
    <SolidColorBrush x:Key="TabActiveBackground"  Color="#E3F2FD" />
    <SolidColorBrush x:Key="TabActiveForeground"  Color="#1565C0" />
    <SolidColorBrush x:Key="TabInactiveForeground" Color="#757575" />
    <SolidColorBrush x:Key="TabActiveIndicator"   Color="#1565C0" />

    <!-- Status / semantic colors -->
    <SolidColorBrush x:Key="SuccessColor"  Color="#4CAF50" />
    <SolidColorBrush x:Key="ErrorColor"    Color="#F44336" />
    <SolidColorBrush x:Key="WarningColor"  Color="#FF9800" />
    <SolidColorBrush x:Key="InfoColor"     Color="#2196F3" />

    <!-- Status pill backgrounds (lighter variants) -->
    <SolidColorBrush x:Key="SuccessBackground"  Color="#E8F5E9" />
    <SolidColorBrush x:Key="ErrorBackground"    Color="#FFEBEE" />
    <SolidColorBrush x:Key="WarningBackground"  Color="#FFF3E0" />
    <SolidColorBrush x:Key="InfoBackground"     Color="#E3F2FD" />

    <!-- Dividers / separators -->
    <SolidColorBrush x:Key="DividerColor"  Color="#E0E0E0" />

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollbarThumb"      Color="#BDBDBD" />
    <SolidColorBrush x:Key="ScrollbarThumbHover"  Color="#9E9E9E" />
    <SolidColorBrush x:Key="ScrollbarTrack"       Color="#F5F5F5" />

    <!-- Offline banner -->
    <SolidColorBrush x:Key="OfflineBannerBackground" Color="#FFF3E0" />
    <SolidColorBrush x:Key="OfflineBannerForeground" Color="#E65100" />

    <!-- Shadow / elevation (used as opacity masks or effect colors) -->
    <Color x:Key="ShadowColor">#29000000</Color>

</ResourceDictionary>
