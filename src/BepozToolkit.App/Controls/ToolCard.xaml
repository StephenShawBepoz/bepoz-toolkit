<UserControl x:Class="BepozToolkit.App.Controls.ToolCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:BepozToolkit.App.Converters"
             xmlns:local="clr-namespace:BepozToolkit.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Name="ToolCardRoot"
             d:DesignWidth="280" d:DesignHeight="180">

    <UserControl.Resources>
        <converters:BoolToStarConverter x:Key="BoolToStar" />
        <converters:StatusToBrushConverter x:Key="StatusToBrush" />
    </UserControl.Resources>

    <Border x:Name="CardBorder"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource CardBorder}"
            BorderThickness="1" CornerRadius="8" Padding="16">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="1" BlurRadius="6" Opacity="0.08"
                              Color="{DynamicResource ShadowColor}" />
        </Border.Effect>

        <!-- Context Menu -->
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Run Tool" Click="OnRunToolClick" />
                <MenuItem Header="Toggle Favorite" Click="OnToggleFavoriteClick" />
                <Separator />
                <MenuItem Header="Copy Name" Click="OnCopyNameClick" />
            </ContextMenu>
        </Border.ContextMenu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Row 0: Name + Status Dot + Favorite Star -->
            <DockPanel Grid.Row="0" Margin="0,0,0,4">
                <!-- Favorite Toggle -->
                <Button DockPanel.Dock="Right" Padding="4" Margin="4,0,0,0"
                        Background="Transparent" BorderThickness="0" Cursor="Hand"
                        FontSize="16" Click="OnToggleFavoriteClick"
                        Content="{Binding IsFavorite, ElementName=ToolCardRoot,
                            Converter={StaticResource BoolToStar}}">
                    <Button.Foreground>
                        <SolidColorBrush Color="#FFC107" />
                    </Button.Foreground>
                </Button>

                <!-- Status Dot + Tool Name -->
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Margin="0,0,8,0"
                             VerticalAlignment="Center"
                             Fill="{Binding Status, ElementName=ToolCardRoot,
                                 Converter={StaticResource StatusToBrush}}" />
                    <TextBlock Text="{Binding ToolName, ElementName=ToolCardRoot}"
                               FontSize="15" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimary}"
                               TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </DockPanel>

            <!-- Row 1: Version + Category -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock FontSize="11" Foreground="{DynamicResource TextSecondary}">
                    <Run Text="v" /><Run Text="{Binding Version, ElementName=ToolCardRoot, Mode=OneWay}" />
                </TextBlock>
                <TextBlock Text=" | " FontSize="11" Foreground="{DynamicResource TextDisabled}" />
                <TextBlock Text="{Binding Category, ElementName=ToolCardRoot}"
                           FontSize="11" Foreground="{DynamicResource TextSecondary}" />
            </StackPanel>

            <!-- Row 2: Description (2-line truncated) -->
            <TextBlock Grid.Row="2"
                       Text="{Binding Description, ElementName=ToolCardRoot}"
                       FontSize="12" Foreground="{DynamicResource TextSecondary}"
                       TextWrapping="Wrap" TextTrimming="CharacterEllipsis"
                       MaxHeight="36" LineStackingStrategy="BlockLineHeight"
                       LineHeight="18" Margin="0,0,0,12" />

            <!-- Row 3: Run Button -->
            <Button Grid.Row="3" Content="Run" Padding="0,8"
                    HorizontalContentAlignment="Center"
                    Click="OnRunToolClick"
                    Background="{DynamicResource AccentPrimary}"
                    Foreground="{DynamicResource TextOnAccent}"
                    BorderThickness="0" Cursor="Hand" FontSize="13">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RunBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RunBorder" Property="Background"
                                        Value="{DynamicResource AccentHover}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="RunBorder" Property="Background"
                                        Value="{DynamicResource AccentPressed}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</UserControl>
