<UserControl x:Class="BepozToolkit.App.Controls.StatusPill"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:BepozToolkit.App.Converters"
             xmlns:local="clr-namespace:BepozToolkit.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Name="StatusPillRoot"
             d:DesignWidth="120" d:DesignHeight="28">

    <UserControl.Resources>
        <converters:StatusPillBrushConverter x:Key="StatusPillBrush" />
    </UserControl.Resources>

    <Border x:Name="PillBorder" CornerRadius="12" Padding="10,4"
            Background="{DynamicResource BackgroundTertiary}"
            BorderBrush="{DynamicResource CardBorder}"
            BorderThickness="1"
            ToolTip="{Binding Detail, ElementName=StatusPillRoot}">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <!-- Colored Status Dot -->
            <Ellipse Width="8" Height="8" Margin="0,0,6,0"
                     VerticalAlignment="Center"
                     Fill="{Binding Status, ElementName=StatusPillRoot,
                         Converter={StaticResource StatusPillBrush}}" />

            <!-- Label Text -->
            <TextBlock Text="{Binding Label, ElementName=StatusPillRoot}"
                       FontSize="12" FontWeight="Medium"
                       Foreground="{DynamicResource TextPrimary}"
                       VerticalAlignment="Center" />
        </StackPanel>
    </Border>
</UserControl>
